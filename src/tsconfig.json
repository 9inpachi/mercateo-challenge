{
  "compilerOptions": {
    "outDir": "../dist/",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["es6", "dom", "es2017"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [],
  "baseUrl": "./",
  "typeRoots": [
    "types"
  ]
}
